# ğŸ”¥ 1. Importando Bibliotecas
import pandas as pd

# ğŸ”¥ 2. Carregando os Dados
# (Aqui vocÃª importa do seu link Raw ou do arquivo local)
df = pd.read_csv("/content/dados_unificados.csv")

# ğŸ”¥ 3. Excluindo a coluna 'registro_sistema'
if 'registro_sistema' in df.columns:
    df = df.drop(columns=['registro_sistema'])
else:
    print("Coluna 'registro_sistema' nÃ£o encontrada para exclusÃ£o.")

# ğŸ”¥ 4. Convertendo a coluna 'matricula_ou_siape' para String
if 'matricula_ou_siape' in df.columns:
    df['matricula_ou_siape'] = df['matricula_ou_siape'].astype(str)
else:
    print("Coluna 'matricula_ou_siape' nÃ£o encontrada para conversÃ£o.")

# ğŸ”¥ 5. Criando nova coluna 'classe_cdu' baseada na coluna 'localizacao'

def mapear_classe_cdu(localizacao):
    try:
        localizacao = int(str(localizacao)[:3])  # Garante pegar os 3 primeiros dÃ­gitos
    except:
        return 'Desconhecido'
    
    if 0 <= localizacao <= 99:
        return 'Generalidades. CiÃªncia e conhecimento'
    elif 100 <= localizacao <= 199:
        return 'Filosofia e psicologia'
    elif 200 <= localizacao <= 299:
        return 'ReligiÃ£o'
    elif 300 <= localizacao <= 399:
        return 'CiÃªncias sociais'
    elif 400 <= localizacao <= 499:
        return 'Classe vaga'
    elif 500 <= localizacao <= 599:
        return 'MatemÃ¡tica e ciÃªncias naturais'
    elif 600 <= localizacao <= 699:
        return 'CiÃªncias aplicadas'
    elif 700 <= localizacao <= 799:
        return 'Belas artes'
    elif 800 <= localizacao <= 899:
        return 'Linguagem. LÃ­ngua. LinguÃ­stica'
    elif 900 <= localizacao <= 999:
        return 'Geografia. Biografia. HistÃ³ria'
    else:
        return 'Fora da ClassificaÃ§Ã£o'

if 'localizacao' in df.columns:
    df['classe_cdu'] = df['localizacao'].apply(mapear_classe_cdu)
else:
    print("Coluna 'localizacao' nÃ£o encontrada para criaÃ§Ã£o da classe CDU.")

# ğŸ”¥ 6. Visualizando as alteraÃ§Ãµes
print(df.head())
